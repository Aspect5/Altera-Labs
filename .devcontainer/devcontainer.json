{
  "name": "Altera Labs Lean Environment",
  // We're telling it to use a clean, standard Ubuntu image, not the default.
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    // We'll add Python to this clean image.
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10"
    },
    // And Node.js for the frontend.
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  // This command will run automatically AFTER the container is created.
  "postCreateCommand": ".devcontainer/post-create.sh",

  // --- FIX: Directly set the PATH for the entire VS Code environment ---
  // This is a more reliable way to ensure the Lean extension finds elan.
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/home/vscode/.elan/bin"
  },

  // This will automatically install the Lean 4 extension for you.
  "customizations": {
    "vscode": {
      "extensions": [
        "leanprover.lean4"
      ]
    }
  },
  // This makes sure your app's ports are available.
  "forwardPorts": [5173, 5001],

  // Run commands as the standard 'vscode' user.
  "remoteUser": "vscode"
}
