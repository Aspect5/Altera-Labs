{
  "name": "Altera Labs Lean Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    }
  },

  "containerEnv": {
    "VERTEX_AI_PROJECT_ID": "altera-labs",
    "VERTEX_AI_LOCATION": "us-east1",
    "GOOGLE_APPLICATION_CREDENTIALS": "/home/vscode/.config/gcloud/application_default_credentials.json"
  },

  "postCreateCommand": "sh .devcontainer/post-create.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "leanprover.lean4",
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },

  "forwardPorts": [5173, 5000],
  "mounts": [
    "source=${localEnv:HOME}/.config/gcloud,target=/home/vscode/.config/gcloud,type=bind,consistency=cached"
  ],
  
  "initializeCommand": "node .devcontainer/setup-gcloud-mount.js",
  
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "32gb"
  },

  "remoteUser": "vscode"
}