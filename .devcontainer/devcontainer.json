{
  "name": "Altera Labs Lean Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    }
  },

  // --- FINAL FIX: Use the exact variable names the Python script expects ---
  "containerEnv": {
    "VERTEX_AI_PROJECT_ID": "altera-labs",
    "VERTEX_AI_LOCATION": "us-east1"
  },

  "postCreateCommand": "sh .devcontainer/post-create.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "leanprover.lean4"
      ]
    }
  },

  "settings": {
    "python.defaultInterpreterPath": "/workspaces/Altera-Labs/.venv/bin/python"
  },

  "forwardPorts": [5173, 5000],
  "mounts": [
      // Mounts the gcloud config directory from your local machine to the container
      // This lets your app use your local user's credentials for Google Cloud
      "source=${localEnv:HOME}${localEnv:USERPROFILE}/.config/gcloud,target=/home/vscode/.config/gcloud,type=bind,consistency=cached"
    ],

  "remoteUser": "vscode"
}